# ANPR Backend Environment Configuration

# Copy this file to .env and update the values as needed

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/anpr_db

# Roboflow OCR Configuration (Optional)
# Set USE_ROBOFLOW_OCR=1 to enable cloud OCR
USE_ROBOFLOW_OCR=0
ROBOFLOW_API_KEY=your_roboflow_api_key_here
ROBOFLOW_PROJECT=your_roboflow_project_name
ROBOFLOW_VERSION=your_roboflow_version_number

# Backend Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Model Paths (relative to anpr-backend directory)
PLATE_DETECTOR_PATH=./models/license_plate_detector.pt
CHARACTER_DETECTOR_PATH=./models/character_detector.pt

# File Storage Configuration
TEMP_DIR=temp
RESULTS_DIR=results

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8080,http://127.0.0.1:8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=anpr_backend.log

# Performance Configuration
MAX_FILE_SIZE=50MB
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,bmp
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov
